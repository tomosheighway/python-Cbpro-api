from tokenize import Double
import websocket , json 
import dateutil.parser
def on_open(ws):
    print("opened connection")

    subscribe_message = {
        "type": "subscribe",
        "channels":[
            {
                "name":"ticker",
                "product_ids":[
                    "BTC-USD"
                ]

            }
        ]
    }
    ws.send(json.dumps(subscribe_message))

def on_msg(ws,msg):

    current_tick = json.loads(msg)
    current_price = current_tick['price']
    product_id = current_tick['product_id']
    best_bid = current_tick['best_bid']
    best_ask = current_tick['best_ask']

    

    print(product_id,current_price , best_bid , best_ask)
   # print(json.loads(msg))

    tick_datetime_object = dateutil.parser.parse(current_tick['time'])

socket = "wss://ws-feed.pro.coinbase.com"
ws = websocket.WebSocketApp(socket, on_open=on_open , on_message=on_msg)
ws.run_forever()